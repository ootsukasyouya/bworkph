<h1>
<div class="container-fruid">
  <table class="table table-striped">
    <p id="notice"><%= notice %></p>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th colspan="3"></th>
      </tr>
      <tbody>
      <% @users.each do |user| %>
        <% if user.id != current_user.id %>
          <div class="item">
            <tr class= "tr_list">
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.status %></td>
              <td><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %></td>
            </tr>
          </div>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @users %>
</h1>
