<% if current_user.status == "店舗" %>
  <% @stores.each do |store| %>
    <h1><%= link_to 'お店の編集', store %></h1>
    <h1><%= link_to 'お店の削除', store, method: :delete %></h1>
  <% end %>
<% else %>

<div class="container-fruid">
  <table class="table table-striped">
    <tr>
      <th>店舗名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>プロフィール</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% @stores.each do |store| %>
        <tr class= "tr_list">
          <td><%= store.name %></td>
          <td><%= store.addres %></td>
          <td><%= store.phone_number %></td>
          <td><%= store.profile %></td>
          <td><%= link_to 'お店の詳細', store %></td>
            <% if @favorites.find_by(id: store.id) %>
              <td><%= "お気に入り済み" %></td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="search_form">
  <%= form_with url:stores_path,method: :get, local: true do |search| %>
    <div class="form-group">
       <%=search.label :働き方 %>
       <%=search.select :how_to_work,["","登録制","短期","シフト申告制","週１日可","Wワーク可"], {id: "exampleFormControlSelect1"}, {class: "form-control"} %>
    </div>
    <div class="form-group">
      <%=search.label :稼ぎ方 %>
      <%=search.select :how_to_earn,["","高収入","日払い可","週払い可","月給"],  {id: "exampleFormControlSelect2"}, {class: "form-control"}  %>
    </div>
    <div class="form-group">
      <%=search.label :募集待遇 %>
      <%=search.select :treatment,["","高校生募集","大学生募集","フリーター募集","主婦募集","人手不足"],  {id: "exampleFormControlSelect2"}, {class: "form-control"}  %>
    </div>

    <%= search.submit "検索" %>
  <% end %>
</div>

<%= paginate @stores %>
<br>
<% end %>
