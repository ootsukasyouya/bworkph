<h1>
<% if current_user.status == "店舗" %>
  <% @stores.each do |store| %>
    <td><%= store.name %></td>
    <td><%= store.addres %></td>
    <td><%= store.phone_number %></td>
    <td><%= store.profile %></td>
    <td><%= link_to 'お店の編集', stores_path %></td>
    <td><%= link_to 'お店の削除', new_store_path, method: :delete %></td>
<% end %>




<% else %>

<div class="container-fruid">
  <table class="table table-striped">
    <tr>
      <th>店舗名</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>プロフィール</th>
      <th colspan="3"></th>
    </tr>
    <tbody>
      <% @stores.each do |store| %>
        <tr class= "tr_list">
          <td><%= store.name %></td>
          <td><%= store.addres %></td>
          <td><%= store.phone_number %></td>
          <td><%= store.profile %></td>
          <td><%= link_to 'お店の詳細', store %></td>
            <% if @favorites.find_by(id: store.id) %>
              <td><%= "お気に入り済み" %></td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="search_form">
  <%= search_form_for @q do |f| %>
    <%= f.label :how_to_work, "働き方" %>
